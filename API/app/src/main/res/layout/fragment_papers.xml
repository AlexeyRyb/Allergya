<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PapersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/paper1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:autoLink="web"
                android:linksClickable="true"
                android:clickable="true"
                android:text="Полезно знать о пыльцевой аллергии" />

            <TextView
                android:id="@+id/paper2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:autoLink="web"
                android:linksClickable="true"
                android:clickable="true"
                android:text="Сезонная аллергия: есть ли спасение?" />

            <TextView
                android:id="@+id/paper3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:autoLink="web"
                android:linksClickable="true"
                android:clickable="true"
                android:text="Как пережить весну: 20 полезных советов при аллергии" />

            <TextView
                android:id="@+id/paper4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:autoLink="web"
                android:linksClickable="true"
                android:clickable="true"
                android:text="Радикальное лечение аллергии: аллергенспецифическая иммунотерапия (АСИТ)" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>